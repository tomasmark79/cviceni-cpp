bool alfabeticky(string lajna1, string lajna2)
{
    // toto zajistí èeské prostøedí pro typ, kterı uvedu

    setlocale(LC_CTYPE, "Czech"); // èeské znaky
    setlocale(LC_COLLATE, "Czech"); // èeské skládání


